PRINT "Statement Test: TYPE"
SET errors TO 0

TYPE t OF 12345
PRINT t
TEST t ! "INTEGER"
ADD _test TO errors
TYPE t OF 0
PRINT t
TEST t ! "INTEGER"
ADD _test TO errors
TYPE t OF -567
PRINT t
TEST t ! "INTEGER"
ADD _test TO errors
SET v TO -98721935
TYPE t OF v
PRINT t
TEST t ! "INTEGER"
ADD _test TO errors

TYPE t OF 12.345
PRINT t
TEST t ! "FLOAT"
ADD _test TO errors
TYPE t OF 0.0
PRINT t
TEST t ! "FLOAT"
ADD _test TO errors
TYPE t OF -0.567
PRINT t
TEST t ! "FLOAT"
ADD _test TO errors
SET v TO 0.55555545
TYPE t OF v
PRINT t
TEST t ! "FLOAT"
ADD _test TO errors

TYPE t OF "string!"
PRINT t
TEST t ! "STRING"
ADD _test TO errors
TYPE t OF ""
PRINT t
TEST t ! "STRING"
ADD _test TO errors
SET v TO "Hello, World!"
TYPE t OF v
PRINT t
TEST t ! "STRING"
ADD _test TO errors

TYPE t OF ( 1 , 2 , "three" , ( 4 , 5 ) )
PRINT t
TEST t ! "LIST"
ADD _test TO errors
TYPE t OF ( )
PRINT t
TEST t ! "LIST"
ADD _test TO errors
LIST v SIZE 15
TYPE t OF v
PRINT t
TEST t ! "LIST"
ADD _test TO errors
TYPE t OF v@0
PRINT t
TEST t ! "NULL"
ADD _test TO errors


TEST errors > 0
GOTO bad IF _test
EXIT

^bad:
ERROR errors